@model _1911062442_LeTanHuy_BigSchool.ViewModels.CoursesViewModel
@{
    ViewBag.Title = "Home Page";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<h2>Attending</h2>
@using Microsoft.AspNet.Identity;
@using _1911062442_LeTanHuy_BigSchool.Models;

<ul class="course">
    @foreach (var course in Model.UpcomingCourses)
    {
        <li>
            <div class="date">
                <div class="month/day">
                    @course.DateTime.ToString("dd/MM")
                </div>
                <div class="time">
                    @course.DateTime.ToString("HH:mm")
                </div>
            </div>
            <div class="details">
                <span class="lecturer">
                    Name: @course.Lecturer.Name
                    @if (Model.ShowAction)
                    {
                        var User_ID = User.Identity.GetUserId();
                        ApplicationDbContext _dbContext = new ApplicationDbContext();
                        bool isFollowing = _dbContext.Followings.Any(f => f.FolloweeId == course.LecturerId && f.FollowerId == User_ID);
                        if (isFollowing)
                        {
                            <button class="btn btn-info btn-sm js-toggle-follow" data-user-id="@course.LecturerId">
                                Following
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-default btn-sm js-toggle-follow" data-user-id="@course.LecturerId">
                                Follow
                            </button>
                        }
                    }
                </span>
                <span class="category">
                    Category: @course.Category.Name
                </span>
                @if (Model.ShowAction)
                {
                    var User_ID = User.Identity.GetUserId();
                    ApplicationDbContext _dbContext = new ApplicationDbContext();
                    bool isGoing = _dbContext.Attendances.Any(a => a.CourseId == course.Id && a.AttendeeId == User_ID);

                    if (isGoing)
                    {
                        <button data-course-id="@course.Id" class="btn btn-info btn-sm js-toggle-attendance">Going</button>
                    }
                    else
                    {
                        <button data-course-id="@course.Id" class="btn btn-default btn-sm js-toggle-attendance">Going?</button>
                    }

                }
                <div class="Place">
                    Place: @course.Place
                </div>
            </div>
        </li>
    }
</ul>

@section scripts{
    <script>
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function (e) {
                var button = $(e.target);
                $.post("/api/attendances", { courseId: button.attr("data-course-id") })
                    .done(function () {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Going");
                    })
                    .fail(function () {
                        alert("Something faied !");
                    });
            });
            $(".js-toggle-follow").click(function (e) {
                var button = $(e.target);
                $.post("/api/followings", { followeeId: button.attr("data-user-id") })
                    .done(function () {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-info")
                            .text("following");
                    })
                    .fail(function () {
                        alert("Something failed !");
                    });
            });
        });
    </script>
}
